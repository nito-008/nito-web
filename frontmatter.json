{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "previewPath": "blog",
      "contentTypes": ["blog"]
    },
    {
      "title": "work",
      "path": "[[workspace]]/src/content/work",
      "previewPath": "work",
      "contentTypes": ["work"]
    }
  ],
  "frontMatter.content.supportedFileTypes": ["md", "markdown", "mdx"],
  "frontMatter.content.defaultFileType": "mdx",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Publishing Date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Open Graph Image",
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        }
      ],
      "template": "[[workspace]]/.frontmatter/templates/blog.mdx",
      "postScript": "generate-og-image",
      "filePrefix": "",
      "fileType": "mdx"
    },
    {
      "name": "work",
      "pageBundle": false,
      "fields": [
        {
          "title": "Name",
          "name": "name",
          "type": "string",
          "single": true
        },
        {
          "title": "Icon",
          "name": "icon",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing Date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "URL",
          "name": "url",
          "type": "string",
          "single": true
        }
      ]
    }
  ],
  "frontMatter.custom.scripts": [
    {
      "id": "generate-og-image",
      "title": "OGP画像を生成",
      "script": "./scripts/generate-og-image.ts",
      "command": "bun"
    }
  ],
  "frontMatter.sponsors.ai.enabled": false,
  "frontMatter.panel.actions.disabled": ["optimizeSlug", "openDashboard"],
  "frontMatter.global.modes": [
    {
      "id": "minimal",
      "features": ["panel.metadata", "panel.actions", "panel.recentlyModified"]
    }
  ],
  "frontMatter.global.activeMode": "minimal"
}
